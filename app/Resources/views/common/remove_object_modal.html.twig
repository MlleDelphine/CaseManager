{% if default %}
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    {% endif %}
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {% if delete_form is defined %}
                {{ form_start(delete_form, {'attr': {'class': 'form-horizontal form-label-left', 'novalidate': ''}}) }}
                <div class="modal-header">
                    <h5 class="modal-title" style="width: 80%">{{ "delete_verb"|trans|capitalize }} {{ object_title|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="text-align: center">
                    Êtes-vous sûr(e) de vouloir supprimer cette entrée ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ "cancel"|trans|capitalize }}</button>
                    <button type="submit" class="btn btn-danger">{{ "delete_verb"|trans|capitalize }}</button>
                </div>
                {{ form_end(delete_form) }}
            {% endif %}
        </div>
    </div>
    {% if default %}
</div>
{% endif %}