{% extends 'base.html.twig' %}

{% block body %}
    <h1>Corporationgroup</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ corporationGroup.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ corporationGroup.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ corporationGroup.slug }}</td>
            </tr>
            <tr>
                <th>Legalstatus</th>
                <td>{{ corporationGroup.legalStatus }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if corporationGroup.created %}{{ corporationGroup.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if corporationGroup.updated %}{{ corporationGroup.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('corporation_group_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('corporation_group_edit', { 'slug': corporationGroup.slug }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
