{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block breadcrumb %}
    <li class="">{{ "customers_management"|trans|capitalize }}</li>
    <li class=""><a href="{{ path('corporation_site_index') }}">{{ "all_corporation_sites"|trans|capitalize }}</a></li>
    <li class="active">{{ "modification"|trans|capitalize }}</li>
{% endblock %}

{% block page_title %}{{ "edition_of_corporation_site"|trans|capitalize }}{% endblock %}

{% block title %}
    {{ "edition_of_corporation_site"|trans|capitalize }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ "modify"|trans|capitalize }} {{ "a_corporation_site"|trans }}</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal form-label-left', 'novalidate': ''}}) }}
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.name, "name"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.corporationGroup, "corporation_group_parent"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.corporationGroup, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.corporationGroup) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.phoneNumber, "phone_number"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.phoneNumber, {'attr': {'class': 'form-control has-feedback-left col-md-7 col-xs-12'}}) }}
                            <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
                            {{ form_errors(edit_form.phoneNumber) }}
                        </div>
                    </div>

                    {{ form_widget(edit_form.postalAddress, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                    {{ form_errors(edit_form.postalAddress) }}

                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('corporation_site_index') }}" class="btn btn-primary"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> {{ "cancel"|trans|capitalize }}</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> {{ "modify"|trans|capitalize }}</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
{% endblock %}
{% block plain_js_bundle %}
    {{ form_javascript(edit_form) }}
{% endblock %}