{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ "all_corporation_employees"|trans|capitalize|capitalize }}</li>
{% endblock %}

{%  block page_title %} {{ "corporation_employees"|trans|capitalize}} {% endblock %}
{% block title %} {{ "corporation_employees"|trans|capitalize }} {% endblock %}

{% block body %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-building"></i> {{ "all_corporation_employees"|trans|capitalize }}</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button id="import-btn" type="button" class="btn btn-primary" data-toggle="modal" data-target="#importModal">
                            <i class="fa fa-upload" aria-hidden="true"></i> {{ "import_verb"|trans|capitalize }}
                        </button>
                    </li>
                    <li>
                        <a type="button" class="btn btn-warning btn-li" href="{{ path('corporation_employee_export_all') }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export_all"|trans|capitalize }}</a>
                    </li>
                    <li class="inherit-li">
                        <a class="btn btn-success btn-li" href="{{ path("corporation_employee_new") }}"><i class="fa fa-user-plus"></i> {{ "addition"|trans|capitalize }}</a>
                    </li>
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content container">
                <a href="#" class="btn btn-default openall">{{ "unfold"|trans|capitalize }}</a>
                <a href="#" class="btn btn-default closeall">{{ "fold"|trans|capitalize }}</a>
                <hr>
                <!-- start accordion -->
                <div class="panel-group accordion" id="accordion" role="tablist" aria-multiselectable="true">
                    {% for corporationEmployee in corporationEmployees %}
                        <div class="panel">
                            <a class="panel-heading" role="tab" id="heading{{ corporationEmployee.id }}" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ corporationEmployee.id }}" aria-expanded="true" aria-controls="collapse{{ corporationEmployee.id }}">
                                <h4 class="panel-title">{{ corporationEmployee.firstName ~ ' ' ~ corporationEmployee.lastName }}</h4>
                            </a>
                            <div id="collapse{{ corporationEmployee.id }}" class="panel-collapse collapse{% if loop.first %} in{% endif %}" role="tabpanel" aria-labelledby="heading{{ corporationEmployee.id }}">
                                <div class="panel-body">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>{{ "honorific"|trans|capitalize }}</th>
                                            <th>{{ "firstName"|trans|capitalize }}</th>
                                            <th>{{ "lastName"|trans|capitalize }}</th>
                                            <th>{{ "mail_address"|trans|capitalize }}</th>
                                            <th>{{ "corporation_job_status"|trans|capitalize }}</th>
                                            <th>{{ "corporation_site"|trans|capitalize }}</th>
                                            <th>{{ "created_m_s"|trans|capitalize }} {{ "on_date"|trans }}</th>
                                            <th>{{ "updated_m_s"|trans|capitalize }} {{ "on_date"|trans }}</th>
                                            <th style="text-align: center;">{{ "actions"|trans|capitalize }}</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <th scope="row">{{ corporationEmployee.id }}</th>
                                            <td>{{ corporationEmployee.honorific }}</td>
                                            <td>{{ corporationEmployee.firstName }}</td>
                                            <td>{{ corporationEmployee.lastName }}</td>
                                            <td>{{ corporationEmployee.mailAddress }}</td>
                                            <td>{{ corporationEmployee.corporationJobstatus.name }}</td>
                                            <td>{{ corporationEmployee.corporationSite.name }}</td>
                                            <td>{% if corporationEmployee.created %}{{ corporationEmployee.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if corporationEmployee.updated %}{{ corporationEmployee.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td align="center" style="vertical-align: middle">
                                                <a class="btn btn-sm btn-info" href="{{ path('corporation_employee_edit', { 'slug': corporationEmployee.slug }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  {{ "modify"|trans|capitalize }}</a>
                                                <a class="btn btn-sm btn-warning" href="{{ path('corporation_employee_export', { 'slug': corporationEmployee.slug }) }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export_verb"|trans|capitalize }}</a>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- end of accordion -->
            </div>
        </div>
    </div>

    <!-- Import Modal -->
    {% include  ":common:import_modal.html.twig" with { "action_path": "corporation_employee_index", "object_title": "some_corporation_employees", "error": error } %}

{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
    {% if error %}
        $(document).ready(function(){
        $("#import-btn").trigger("click");
        });
    {% endif %}

{% endblock %}