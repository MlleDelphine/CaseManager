{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="">{{ "customers_management"|trans|capitalize }}</li>
    <li class="active">{{ "all_townships"|trans|capitalize|capitalize }}</li>
{% endblock %}

{%  block page_title %} {{ "townships"|trans|capitalize}} {% endblock %}
{% block title %} {{ "townships"|trans|capitalize }} {% endblock %}

{% block body %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-university"></i> {{ "all_townships"|trans|capitalize }}</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button id="import-btn" type="button" class="btn btn-primary" data-toggle="modal" data-target="#importModal">
                            <i class="fa fa-upload" aria-hidden="true"></i> {{ "import_verb"|trans|capitalize }}
                        </button>
                    </li>
                    <li>
                        <a type="button" class="btn btn-warning btn-li" href="{{ path('township_export_all') }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export_all"|trans|capitalize }}</a>
                    </li>
                    <li class="inherit-li">
                        <a class="btn btn-success btn-li" href="{{ path("township_new") }}"><i class="fa fa-user-plus"></i> {{ "addition"|trans|capitalize }}</a>
                    </li>
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content container">
                <a href="#" class="btn btn-default openall">{{ "unfold"|trans|capitalize }}</a>
                <a href="#" class="btn btn-default closeall">{{ "fold"|trans|capitalize }}</a>
                <hr>
                <!-- start accordion -->
                <div class="panel-group accordion" id="accordion" role="tablist" aria-multiselectable="true">
                    {% for townShip in townShips %}
                        <div class="panel">
                            <a class="panel-heading" role="tab" id="heading{{ townShip.id }}" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ townShip.id }}" aria-expanded="true" aria-controls="collapse{{ townShip.id }}">
                                <h4 class="panel-title">{{ townShip.name }}</h4>
                            </a>
                            <div id="collapse{{ townShip.id }}" class="panel-collapse collapse{% if loop.first %} in{% endif %}" role="tabpanel" aria-labelledby="heading{{ townShip.id }}">
                                <div class="panel-body">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>{{ "name"|trans|capitalize }}</th>
                                            <th>{{ "contact_name"|trans|capitalize }}</th>
                                            <th>{{ "contact_mail_address"|trans|capitalize }}</th>
                                            <th>{{ "created_f_s"|trans|capitalize }} {{ "on_date"|trans }}</th>
                                            <th>{{ "updated_f_s"|trans|capitalize }} {{ "on_date"|trans }}</th>
                                            <th style="text-align: center;">{{ "actions"|trans|capitalize }}</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <th scope="row">{{ townShip.id }}</th>
                                            <td>{{ townShip.name }}</td>
                                            <td>{{ townShip.contactName }}</td>
                                            <td>{{ townShip.contactEmail }}</td>
                                            <td>{% if townShip.created %}{{ townShip.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if townShip.updated %}{{ townShip.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td align="center" style="vertical-align: middle">
                                                <a class="btn btn-sm btn-info" href="{{ path('township_edit', { 'slug': townShip.slug }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  {{ "modify"|trans|capitalize }}</a>
                                                <a class="btn btn-sm btn-warning" href="{{ path('township_export', { 'slug': townShip.slug }) }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export_verb"|trans|capitalize }}</a>
                                                <button id="import-btn" type="button" class="btn btn-sm btn-danger delete-entity" data-toggle="modal" data-target="#deleteModal" data-slug="{{ townShip.slug }}">
                                                    <i class="fa fa-trash" aria-hidden="true"></i> {{ "delete_verb"|trans|capitalize }}
                                                </button>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- end of accordion -->
            </div>
        </div>
    </div>

    <!-- Import Modal -->
    {% include  ":common:import_modal.html.twig" with { "action_path": "township_index", "object_title": "some_townships", "error": error } %}
    <!-- Delete Modal -->
    {% include  ":common:remove_object_modal.html.twig" with { "default": true } %}

{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
    {% if error %}
        $(document).ready(function(){
        $("#import-btn").trigger("click");
        });
    {% endif %}
    {% include ":common:delete_pop_up.js.twig" with { "routeName": "township_delete" } %}

{% endblock %}