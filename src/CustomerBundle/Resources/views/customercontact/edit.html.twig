{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block breadcrumb %}
    <li class="">{{ "customers_management"|trans|capitalize }}</li>
    <li class=""><a href="{{ path('customer_contact_index') }}">{{ "customer_contacts"|trans|capitalize }}</a></li>
    <li class="active">{{ "modification"|trans|capitalize }}</li>
{% endblock %}

{% block page_title %}{{ "edition_of_customer_contact"|trans|capitalize }}{% endblock %}

{% block title %}
    {{ "edition_of_customer_contact"|trans|capitalize }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-address-book"></i> {{ "modify"|trans|capitalize }} {{ "a_customer_contact"|trans }}</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal form-label-left customer-contact-form', 'novalidate': ''}}) }}
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.honorific, "honorific"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.honorific, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.honorific) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.firstName, "firstname"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.firstName, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.firstName) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.lastName, "lastname"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.lastName, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.lastName) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.phoneNumber, "phone_number"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.phoneNumber, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.phoneNumber) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.corporationJobStatus, "job"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.corporationJobStatus, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.corporationJobStatus) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.mailAddress, "email"|trans|capitalize, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.mailAddress, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.mailAddress) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.customerType, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.customerType) }}
                            {{ form_errors(edit_form.customerType) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.customer, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12 render-customer-list">
                            {{ form_widget(edit_form.customer, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.customer) }}
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('customer_contact_index') }}" class="btn btn-primary"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> {{ "cancel"|trans|capitalize }}</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> {{ "modify"|trans|capitalize }}</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
{% endblock %}
{% block plain_js_bundle %}
    {{ form_javascript(edit_form) }}
    <script>
        //Ready
        $(function() {
            ajaxSubmitReloadNextByRadioBox("customer-contact-form", ":radio", "customerbundle_customercontact", "customerType", "customer", [], true);
        });
    </script>
{% endblock %}