{% extends 'base.html.twig' %}
{% form_theme edit_form 'form/user_form_input.html.twig' %}

{% block stylesheets %}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block breadcrumb %}
    <li class=""><a href="{{ path('user_index') }}">Utilisateurs</a></li>
    <li class="active">{{ "modify"|trans|capitalize }}</li>
{% endblock %}

{% block title %}Modification d'utilisateur{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Modification du compte utilisateur <em>{{ user.username }}</em></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal form-label-left', 'novalidate': ''}}) }}
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.firstName, 'Prénom', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.firstName, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.firstName) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.lastName, 'Nom', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.lastName, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.lastName) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.username, 'Identifiant/Pseudo', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.username, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.username) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.email, 'Email', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.email, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.roles, 'Roles', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.roles, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.roles) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.phoneNumber, 'Téléphone', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.phoneNumber, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.phoneNumber) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.jobStatus, 'Poste', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.jobStatus, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.jobStatus) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.team, 'Equipe', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.team, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.team) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(edit_form.enabled, 'Connexion autorisée', {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.enabled, {'attr': {'class': 'orange-icheck'}}) }}
                            {{ form_errors(edit_form.enabled) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.unit, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.unit, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.unit) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.timePrices, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.timePrices) }}
                            {{ form_errors(edit_form.timePrices) }}
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('user_index') }}" class="btn btn-primary"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> {{ "cancel"|trans|capitalize }}</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> {{ "modify"|trans|capitalize }}</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
{% endblock %}
{% block plain_js_bundle %}
    {{ form_javascript(edit_form) }}
    <script type="application/javascript">
        /**
         * Launch collection function
         */
        $(document).ready(function() {
            $(".item-collection").collection({
                after_add: function () {
                    $("select").select2({ width: '100%' });
                    return true;
                },
                allow_duplicate: false,
                allow_up: false,
                allow_down: false,
                allow_add: true,
                allow_remove: true,
                min: 0,
                max: 12,
                add: '<a href="#" class="collection-add btn btn-default btn-success" title="Add file"><span class="glyphicon glyphicon-plus-sign"></span></a>',
                remove: '<a href="#" class="collection-remove btn btn-default btn-danger" title="Delete file"><span class="glyphicon glyphicon-trash"></span></a>'
            });
        });
    </script>
{% endblock %}