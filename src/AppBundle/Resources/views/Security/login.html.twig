<body class="login">
<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form role="form" action="{{ path('casemanager_backend_login') }}" method="post">
                    <h1>Login Form</h1>
                    {% if error %}
                        <div class="alert alert-danger top-alert-error" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                        <input name="_username" id="username" type="text" class="form-control has-feedback-left" placeholder="Username" value="{{ last_username }}">
                        <span aria-hidden="true" class="fa fa-user form-control-feedback left"></span>
                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                        <input name="_password" id="password" type="password" class="form-control has-feedback-left" placeholder="Password" value="{{ last_username }}" required="">
                        <span aria-hidden="true" class="fa fa-lock form-control-feedback left"></span>
                        <input type="hidden" name="_target_path" value="account" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-info submit">Log in</button>
                        {#<a class="reset_pass" href="#">Lost your password?</a>#}
                    </div>

                    <div class="clearfix"></div>

                    <div class="separator">
                        {#<p class="change_link">New to site?#}
                            {#<a href="#signup" class="to_register"> Create Account </a>#}
                        {#</p>#}

                        <div class="clearfix"></div>
                        <br />

                        <div>
                            <h1><i class="fa fa-paw"></i> Casemanager Service!</h1>
                            <p>©2017 All Rights Reserved. Casemanager service is a DelphiGX product. Privacy and Terms</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>

