{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="">{{ "resources_management"|trans|capitalize }}</li>
    <li class="active">{{ "all_equipments"|trans|capitalize|capitalize }}</li>
{% endblock %}

{% block page_title %}{{ "all_equipments"|trans|capitalize }}{% endblock %}

{% block title %}{{ "all_equipments"|trans|capitalize }}{% endblock %}

{% block body %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-truck"></i> {{ "all_equipments"|trans|capitalize }}</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button id="import-btn" type="button" class="btn btn-primary" data-toggle="modal" data-target="#importModal">
                            <i class="fa fa-upload" aria-hidden="true"></i> {{ "import_verb"|trans|capitalize }}
                        </button>
                    </li>
                    <li>
                        <a type="button" class="btn btn-warning btn-li" href="{{ path('equipment_export_all') }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export_all"|trans|capitalize }}</a>
                    </li>
                    <li class="inherit-li">
                        <a class="btn btn-success btn-li" href="{{ path("equipment_new") }}"><i class="fa fa-plus"></i> {{ "addition"|trans|capitalize }}</a>
                    </li>
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content container">
                <a href="#" class="btn btn-default openall">{{ "unfold"|trans|capitalize }}</a>
                <a href="#" class="btn btn-default closeall">{{ "fold"|trans|capitalize }}</a>
                <hr>
                <!-- start accordion -->
                <div class="panel-group accordion" id="accordion" role="tablist" aria-multiselectable="true">
                    {% for equipment in equipments %}
                        <div class="panel">
                            <a class="panel-heading" role="tab" id="heading{{ equipment.id }}" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ equipment.id }}" aria-expanded="true" aria-controls="collapse{{ equipment.id }}">
                                <h4 class="panel-title">{{ equipment.name }}</h4>
                            </a>
                            <div id="collapse{{ equipment.id }}" class="panel-collapse collapse{% if loop.first %} in{% endif %}" role="tabpanel" aria-labelledby="heading{{ equipment.id }}">
                                <div class="panel-body">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>{{ "label"|trans|capitalize }}</th>
                                            <th>{{ "reference"|trans|capitalize }}</th>
                                            <th>{{ "functional_m_s"|trans|capitalize }}</th>
                                            <th>{{ "prices"|trans|capitalize }}</th>
                                            <th>{{ "created_m_s"|trans|capitalize }} {{ "on_date"|trans }}</th>
                                            <th>{{ "updated_m_s"|trans|capitalize }} {{ "on_date"|trans }}</th>
                                            <th style="text-align: center;">{{ "actions"|trans|capitalize }}</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <th scope="row">{{ equipment.id }}</th>
                                            <td>{{ equipment.name }}</td>
                                            <td>{{ equipment.reference }}</td>
                                            <td align="center">{% if equipment.working == true %}
                                                    <i class="fa fa-check" aria-hidden="true" style="color:#1C9A71"></i>
                                                {% else %}<i class="fa fa-times" aria-hidden="true" style="color:#D44950"></i>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="x_panel">
                                                    <div class="x_title">
                                                        <h2><i class="fa fa-sitemap" aria-hidden="true"></i>
                                                            <small>{% if equipment.unitTimePrices|length > 0 %}{{ "price"|trans|capitalize }}{% else %}{{ "no_price"|trans|capitalize }}{% endif %}</small></h2>
                                                        <ul class="nav navbar-right panel_toolbox">
                                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                            </li>
                                                        </ul>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div class="x_content" style="display: none">
                                                        <table class="table table-bordered">
                                                            <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>{{ "from"|trans|capitalize }}</th>
                                                                <th>{{ "until_coi"|trans|capitalize }}</th>
                                                                <th>{{ "measure_unit"|trans|capitalize }}</th>
                                                                <th>{{ "cost"|trans|capitalize }} {{ "currency_euro"|trans }}</th>
                                                            </tr>
                                                            </thead>
                                                            <tbody>
                                                            {% for unitTimePrice in equipment.unitTimePrices %}
                                                                <tr>
                                                                    <td>{{ unitTimePrice.id }}</td>
                                                                    <td>{{ unitTimePrice.fromDate|date("d-m-Y") }}</td>
                                                                    <td>{{ unitTimePrice.untilDate|date("d-m-Y") }}</td>
                                                                    <td>{{ unitTimePrice.unit }}</td>
                                                                    <td>{{ unitTimePrice.unitaryPrice }}â‚¬</td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{% if equipment.created %}{{ equipment.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if equipment.updated %}{{ equipment.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td align="center" style="vertical-align: middle">
                                                <a class="btn btn-sm btn-info" href="{{ path('equipment_edit', { 'slug': equipment.slug }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  {{ "modify"|trans|capitalize }}</a>
                                                <a class="btn btn-sm btn-warning" href="{{ path('equipment_export', { 'slug': equipment.slug }) }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export"|trans|capitalize }}</a>
                                                <button id="import-btn" type="button" class="btn btn-sm btn-danger delete-entity" data-toggle="modal" data-target="#deleteModal" data-slug="{{ equipment.slug }}">
                                                    <i class="fa fa-trash" aria-hidden="true"></i> {{ "delete_verb"|trans|capitalize }}
                                                </button>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- end of accordion -->
            </div>
        </div>
    </div>

    <!-- Import Modal -->
    {% include  ":common:import_modal.html.twig" with { "action_path": "equipment_index", "object_title": "some_equipments", "error": error } %}
    <!-- Delete Modal -->
    {% include  ":common:remove_object_modal.html.twig" with { "default": true } %}
{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
    {% if error %}
        $(document).ready(function(){
        $("#import-btn").trigger("click");
        });
    {% endif %}

    {% include ":common:delete_pop_up.js.twig" with { "routeName": "equipment_delete" } %}
{% endblock %}