{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ "all_equipments"|trans|capitalize|capitalize }}</li>
{% endblock %}

{% block page_title %}{{ "equipments"|trans|capitalize }}{% endblock %}

{% block title %}{{ "equipments"|trans|capitalize }}{% endblock %}

{% block body %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-flask"></i>{{ "all_equipments"|trans|capitalize }}</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button id="import-btn" type="button" class="btn btn-primary" data-toggle="modal" data-target="#importModal">
                            <i class="fa fa-upload" aria-hidden="true"></i> {{ "import_verb"|trans|capitalize }}
                        </button>
                    </li>
                    <li>
                        <a type="button" class="btn btn-warning btn-li" href="{{ path('equipment_export_all') }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export_all"|trans|capitalize }}</a>
                    </li>
                    <li class="inherit-li">
                        <a class="btn btn-success btn-li" href="{{ path("equipment_new") }}"><i class="fa fa-plus"></i> {{ "addition"|trans|capitalize }}</a>
                    </li>
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content container">
                <a href="#" class="btn btn-default openall">{{ "unfold"|trans|capitalize }}</a>
                <a href="#" class="btn btn-default closeall">{{ "fold"|trans|capitalize }}</a>
                <hr>
                <!-- start accordion -->
                <div class="panel-group accordion" id="accordion" role="tablist" aria-multiselectable="true">
                    {% for equipment in equipments %}
                        <div class="panel">
                            <a class="panel-heading" role="tab" id="heading{{ equipment.id }}" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ equipment.id }}" aria-expanded="true" aria-controls="collapse{{ equipment.id }}">
                                <h4 class="panel-title">{{ equipment.name }}</h4>
                            </a>
                            <div id="collapse{{ equipment.id }}" class="panel-collapse collapse{% if loop.first %} in{% endif %}" role="tabpanel" aria-labelledby="heading{{ equipment.id }}">
                                <div class="panel-body">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Libellé</th>
                                            <th>Référence</th>
                                            <th>Fonctionnel</th>
                                            <th>Créé le</th>
                                            <th>Dernière màj le</th>
                                            <th style="text-align: center;">Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <th scope="row">{{ equipment.id }}</th>
                                            <td>{{ equipment.name }}</td>
                                            <td>{{ equipment.reference }}</td>
                                            <td align="center">{% if equipment.working == true %}
                                                    <i class="fa fa-check" aria-hidden="true" style="color:#1C9A71"></i>
                                                {% else %}<i class="fa fa-times" aria-hidden="true" style="color:#D44950"></i>
                                                {% endif %}
                                            </td>
                                            <td>{% if equipment.created %}{{ equipment.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if equipment.updated %}{{ equipment.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td align="center" style="vertical-align: middle">
                                                <a class="btn btn-sm btn-info" href="{{ path('equipment_edit', { 'slug': equipment.slug }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  Modifier</a>
                                                <a class="btn btn-sm btn-warning" href="{{ path('equipment_export', { 'slug': equipment.slug }) }}"><i class="fa fa-download" aria-hidden="true"></i> Export</a>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- end of accordion -->
            </div>
        </div>
    </div>

    <!-- Import Modal -->
    {% include  ":common:import_modal.html.twig" with { "action_path": "equipment_index", "object_title": "some_equipments", "error": error } %}

{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
    {% if error %}
        $(document).ready(function(){
        $("#import-btn").trigger("click");
        });
    {% endif %}

{% endblock %}