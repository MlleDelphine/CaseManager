{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jobstatus</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jobStatus.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ jobStatus.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ jobStatus.slug }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if jobStatus.created %}{{ jobStatus.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if jobStatus.updated %}{{ jobStatus.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jobstatus_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('jobstatus_edit', { 'id': jobStatus.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
