{% extends 'base.html.twig' %}

{% block body %}
    <h1>material</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ material.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ material.slug }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if material.created %}{{ material.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if material.updated %}{{ material.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('material_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('material_edit', { 'id': material.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
