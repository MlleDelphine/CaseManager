{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ "all_materials"|trans|capitalize|capitalize }}x</li>
{% endblock %}

{% block page_title %}{{ "all_materials"|trans|capitalize|capitalize }}{% endblock %}

{% block title %}{{ "all_materials"|trans|capitalize|capitalize }}{% endblock %}

{% block body %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-flask"></i> {{ "all_materials"|trans|capitalize|capitalize }}</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button id="import-btn" type="button" class="btn btn-primary" data-toggle="modal" data-target="#importModal">
                            <i class="fa fa-upload" aria-hidden="true"></i> {{ "import_verb"|trans|capitalize }}
                        </button>
                    </li>
                    <li>
                        <a type="button" class="btn btn-warning btn-li" href="{{ path('material_export_all') }}"><i class="fa fa-download" aria-hidden="true"></i> {{ "export_all"|trans|capitalize }}</a>
                    </li>
                    <li class="inherit-li">
                        <a class="btn btn-success btn-li" href="{{ path("material_new") }}"><i class="fa fa-plus"></i> {{ "addition"|trans|capitalize }}</a>
                    </li>
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content container">
                <a href="#" class="btn btn-default openall">{{ "unfold"|trans|capitalize }}</a> <a href="#" class="btn btn-default closeall">{{ "fold"|trans|capitalize }}</a>
                <hr>
                <!-- start accordion -->
                <div class="panel-group accordion" id="accordion" role="tablist" aria-multiselectable="true">
                    {% for material in materiales %}
                        <div class="panel">
                            <a class="panel-heading" role="tab" id="heading{{ material.id }}" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ material.id }}" aria-expanded="true" aria-controls="collapse{{ material.id }}">
                                <h4 class="panel-title">{{ material.name }}</h4>
                            </a>
                            <div id="collapse{{ material.id }}" class="panel-collapse collapse{% if loop.first %} in{% endif %}" role="tabpanel" aria-labelledby="heading{{ material.id }}">
                                <div class="panel-body">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Libellé</th>
                                            <th>Référence</th>
                                            <th>Unité</th>
                                            <th>Prix</th>
                                            <th>Créé le</th>
                                            <th>Dernière màj le</th>
                                            <th style="text-align: center;">Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <th scope="row">{{ material.id }}</th>
                                            <td>{{ material.name }}</td>
                                            <td>{{ material.reference }}</td>
                                            <td>{{ material.unit }}</td>
                                            <td>
                                                <div class="x_panel">
                                                    <div class="x_title">
                                                        <h2><i class="fa fa-sitemap" aria-hidden="true"></i>
                                                            <small>{% if material.timePrices|length > 0 %}Prix{% else %}Aucun matériau{% endif %}</small></h2>
                                                        <ul class="nav navbar-right panel_toolbox">
                                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                            </li>
                                                        </ul>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div class="x_content" style="display: none">
                                                        <table class="table table-bordered">
                                                            <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>De</th>
                                                                <th>Jusqu'à</th>
                                                                <th>Coût (€)</th>
                                                            </tr>
                                                            </thead>
                                                            <tbody>
                                                            {% for timePrice in material.timePrices %}
                                                                <tr>
                                                                    <td>{{ timePrice.id }}</td>
                                                                    <td>{{ timePrice.fromDate|date("d-m-Y") }}</td>
                                                                    <td>{{ timePrice.untilDate|date("d-m-Y") }}</td>
                                                                    <td>{{ timePrice.unitaryPrice }}</td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{% if material.created %}{{ material.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if material.updated %}{{ material.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td align="center" style="vertical-align: middle">
                                                <a class="btn btn-sm btn-info" href="{{ path('material_edit', { 'slug': material.slug }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  Modifier</a>
                                                <a class="btn btn-sm btn-warning" href="{{ path('material_export', { 'slug': material.slug }) }}"><i class="fa fa-download" aria-hidden="true"></i> Export</a>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- end of accordion -->
            </div>
        </div>
    </div>

    <!-- Import Modal -->
    {% include  ":common:import_modal.html.twig" with { "action_path": "material_index", "object_title": "some_materials", "error": error } %}

{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
    {% if error %}
        $(document).ready(function(){
        $("#import-btn").trigger("click");
        });
    {% endif %}

{% endblock %}