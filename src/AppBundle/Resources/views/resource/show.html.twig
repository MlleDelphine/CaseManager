{% extends 'base.html.twig' %}

{% block body %}
    <h1>resource</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resource.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ resource.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ resource.slug }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if resource.created %}{{ resource.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if resource.updated %}{{ resource.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('resource_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('resource_edit', { 'id': resource.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
