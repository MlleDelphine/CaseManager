{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block breadcrumb %}
    <li class="">{{ "catalog_management"|trans|capitalize }}</li>
    <li class=""><a href="{{ path('rate_index') }}">{{ "all_rates"|trans|capitalize }}</a></li>
    <li class="active">{{ "modify"|trans|capitalize }}</li>
{% endblock %}

{% block page_title %}{{ "edition_of_rate"|trans|capitalize }}{% endblock %}

{% block title %}{{ "edition_of_the_rate"|trans|capitalize }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ "edition_of_the_rate"|trans|capitalize }} <em>{{ rate.name }}</em></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal form-label-left', 'novalidate': ''}}) }}
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.name, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.percentage, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.percentage, {'attr': {'class': 'form-control has-feedback-left col-md-7 col-xs-12'}}) }}
                            <span class="fa fa-percent form-control-feedback left" aria-hidden="true"></span>
                            {{ form_errors(edit_form.percentage) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(edit_form.fromDate, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.fromDate, {'attr': {'class': 'form-control has-feedback-left col-md-7 col-xs-12'}}) }}
                            <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
                            {{ form_errors(edit_form.fromDate) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(edit_form.untilDate, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.untilDate, {'attr': {'class': 'form-control has-feedback-left col-md-7 col-xs-12'}}) }}
                            <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
                            {{ form_errors(edit_form.untilDate) }}
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('rate_index') }}" class="btn btn-primary"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> {{ "cancel"|trans|capitalize }}</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> {{ "modify"|trans|capitalize }}</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
{% endblock %}
{% block plain_js_bundle %}
    {{ form_javascript(edit_form) }}
{% endblock %}