{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block breadcrumb %}
    <li class="">{{ "catalog_management"|trans|capitalize }}</li>
    <li class=""><a href="{{ path('work_site_type_index') }}">{{ "all_prestations"|trans|capitalize }}</a></li>
    <li class="active">{{ "modify"|trans|capitalize }}</li>
{% endblock %}

{% block page_title %}{{ "edition_of_prestation"|trans|capitalize }}{% endblock %}

{% block title %}{{ "edition_of_prestation"|trans|capitalize }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ "edition_of_the_prestation"|trans|capitalize }} <em>{{ prestation.name }}</em></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal form-label-left', 'novalidate': ''}}) }}
                    <div class="form-group">
                        {% if edit_form.name.vars.required %} <span class="required">*</span> {%  endif %}
                        {{ form_label(edit_form.name, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {% if edit_form.internalReference.vars.required %} <span class="required">*</span> {%  endif %}
                        {{ form_label(edit_form.internalReference, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.internalReference, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.internalReference) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        {{ form_label(edit_form.description, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        {% if edit_form.description.vars.required %} <span class="required">*</span> {%  endif %}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.description) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.color, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        {% if edit_form.color.vars.required %} <span class="required">*</span> {%  endif %}
                        <div class="col-md-6 col-sm-6 col-xs-12 color-picker input-group" style="padding-right: 10px; padding-left: 10px">
                            {{ form_widget(edit_form.color, {"attr": {"class": "form-control"}}) }}
                            <span class="input-group-addon"><i></i></span>
                            {{ form_errors(edit_form.color) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.unitTimePrices, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        {% if edit_form.unitTimePrices.vars.required %} <span class="required">*</span> {%  endif %}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.unitTimePrices) }}
                            {{ form_errors(edit_form.unitTimePrices) }}
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('work_site_type_index') }}" class="btn btn-primary"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> {{ "cancel"|trans|capitalize }}</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> {{ "modify"|trans|capitalize }}</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
{% endblock %}
{% block plain_js_bundle %}
    {{ form_javascript(edit_form) }}
    <script type="application/javascript">
        /**
         * Launch collection function
         */
        $(document).ready(function() {
            $(".item-collection").collection({
                allow_duplicate: false,
                after_add: function () {
                    $("select").select2({ width: '100%' });
                    return true;
                },
                allow_up: false,
                allow_down: false,
                allow_add: true,
                allow_remove: true,
                min: 1,
                // max: 200,
                add: '<a href="#" class="collection-add btn btn-default btn-success" title="Ajouter un élément"><span class="glyphicon glyphicon-plus-sign"></span></a>',
                remove: '<a href="#" class="collection-remove btn btn-default btn-danger" title="Supprimer cet élément"><span class="glyphicon glyphicon-trash"></span></a>'
            });
        });
    </script>
{% endblock %}