                {#title: '{{ 'successfully_edit'|trans }}',#}
                {#text: jsonData.msg,#}
                {#type: 'success',#}
                {#styling: 'bootstrap3'#}
            {#});#}
        }
    }).fail(function(jxh, textmsg, errorThrown){
        new PNotify({
            title: '{{ 'failed_add'|trans }}',
