{% if classEntity is defined %}
{% set rootClass = classEntity %}
{% else %}
{% set rootClass = "add-customer-articles" %}
{% endif %}

$("#all-customer-serials").on('click', '.{{ rootClass }}', function (e) {
    e.preventDefault();
    //e.stopPropagation();
    var slugData = $(this).data('slug');
    if(typeof slugData === "undefined"){
        slugData = $(this).attr("href");
    }
    $.ajax({
        method: "POST",
        url: Routing.generate('{{ routeName }}', { '{{ slugParam }}': slugData }),
        dataType: "html",
        success: function(response) {
            $("#{{ targetPopUp }}").html(response);
        }
    }).fail(function(jxh, textmsg, errorThrown){
        new PNotify({
            title: '{{ 'failed_add'|trans }}',
            text: 'Oh No! '+request.responseText,
            type: 'error',
            styling: 'bootstrap3'
        });
    });
});