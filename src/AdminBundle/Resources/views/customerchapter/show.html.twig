{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customerchapter</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customerChapter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customerChapter.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ customerChapter.slug }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if customerChapter.created %}{{ customerChapter.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if customerChapter.updated %}{{ customerChapter.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customerchapter_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('customerchapter_edit', { 'id': customerChapter.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
