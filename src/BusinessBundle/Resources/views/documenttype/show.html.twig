{% extends 'base.html.twig' %}

{% block body %}
    <h1>Documenttype</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ documentType.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ documentType.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if documentType.created %}{{ documentType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if documentType.updated %}{{ documentType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('document_type_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('document_type_edit', { 'id': documentType.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
