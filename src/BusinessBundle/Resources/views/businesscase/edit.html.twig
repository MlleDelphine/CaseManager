{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block breadcrumb %}
    <li class="">{{ "customers_management"|trans|capitalize }}</li>
    <li class=""><a href="{{ path('business_case_index') }}">{{ "business_cases"|trans|capitalize }}</a></li>
    <li class="active">{{ "modification"|trans|capitalize }}</li>
{% endblock %}

{% block page_title %}{{ "creation_of_business_case"|trans|capitalize }}{% endblock %}

{% block title %}
    {{ "creation_of_business_case"|trans|capitalize }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-folder-open"></i> {{ "edition_of_the_business_case"|trans|capitalize }} <em>{{ businessCase.name }}</em></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal form-label-left business-case-form', 'novalidate': ''}}) }}
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.name, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.externalReference, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.externalReference, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.externalReference) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.internalReference, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.internalReference, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(edit_form.internalReference) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.customerType, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.customerType) }}
                            {{ form_errors(edit_form.customerType) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.customer, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12 render-customer-list">
                            {{ form_widget(edit_form.customer, {'attr': {'class': 'form- control col-md-12 col-xs- 12'}}) }}
                            {{ form_errors(edit_form.customer) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.customerContact, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12 render-customerContact-list">
                            {{ form_widget(edit_form.customerContact, {'attr': {'class': 'form-control col-md-12 col-xs-12'}}) }}
                            {{ form_errors(edit_form.customerContact) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        {{ form_label(edit_form.user, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.user, {'attr': {'class': 'form-control col-md-12 col-xs-12'}}) }}
                            {{ form_errors(edit_form.user) }}
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('business_case_index') }}" class="btn btn-primary"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> {{ "cancel"|trans|capitalize }}</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> {{ "create"|trans|capitalize }}</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_javascripts %}
    {{ parent() }}
{% endblock %}
{% block plain_js_bundle %}
    {{ form_javascript(edit_form) }}
    <script>
        //Ready
        $(function() {
            ajaxSubmitReloadNextByRadioBox("business-case-form", "input:radio", "businessbundle_businesscase", "customerType", "customer", []);
            ajaxSubmitReloadNextByRadioBox("business-case-form", "select", "businessbundle_businesscase", "customer", "customerContact", [{name: "customerType", type: ":radio"}]);

            $(".business-case-form").on("mouseup", "#businessbundle_businesscase_customerType", function(event){
                var $val = $("input:radio[name^='businessbundle_businesscase[customerType]']:checked");
                if(typeof $val.val() !== "undefined"){
                    cleanChildren("businessbundle_businesscase_", true, ["customer_contact"]);
                }
            });
        });
    </script>
{% endblock %}