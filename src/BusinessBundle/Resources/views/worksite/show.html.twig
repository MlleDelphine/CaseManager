{% extends 'base.html.twig' %}

{% block body %}
    <h1>Documenttype</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workSite.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ workSite.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if workSite.created %}{{ workSite.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if workSite.updated %}{{ workSite.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('work_site_type_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('work_site_type_edit', { 'id': workSite.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
